<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:background="@color/white_color"
    android:padding="20dp"
    android:id="@+id/notifLay"
    android:layout_marginBottom="5dp"
    >
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
           android:id="@+id/leftLayNotif"
        android:layout_alignParentLeft="true"
     >
        <ImageView
            android:layout_width="30dp"

            android:layout_marginTop="5dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notifications"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/rightLayNotif"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_next"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftLayNotif"
        android:layout_toLeftOf="@id/rightLayNotif"
        android:id="@+id/mainNotifId"
        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:text="Title"
    android:textStyle="bold"
    android:id="@+id/titleNotifId"
    android:textColor="@color/colorGreen"
    android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/titleNotifId"
        android:id="@+id/bodyNotifId"
        android:text="Body"
        android:textColor="@color/colorGreen"
        android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>